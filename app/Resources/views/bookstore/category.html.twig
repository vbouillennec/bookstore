{% extends 'base2.html.twig' %}

{% block titre %}

{% endblock %}

{% block body %}
<div class="row">
    <div class="col">
        <div class="jumbotron">
            <h1>{{ category.nomCat }}</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="row">
            {% for book in category.books %}
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img class="img-fluid" src="{{ asset('img/'~book.image) }}" alt="cover">
                        <div class="caption">
                            <h3>{{ book.titre }}</h3>
                            <p>{{ book.auteur }}</p>
                            <p>
                                <a class="btn btn-primary" href="{{ url('bookstore.book', {'slug' : book.slugTitre }) }}">Details</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}